<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >
        <RelativeLayout
            android:id="@+id/time_photochat_item_left_rl"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
           
            android:layout_centerHorizontal="true" >

            <TextView
                android:id="@+id/time_photochat_item_left_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:text=""
                android:textColor="#a0a0a0"
                android:textSize="11dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/userHead_chat_item_photo_left_img"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/time_photochat_item_left_rl"
            android:layout_marginLeft="10dp"
            android:src="@drawable/message_groupchat_img_profiles_default" />

        <TextView
            android:id="@+id/userNamechat_item_photo_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time_photochat_item_left_rl"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/userHead_chat_item_photo_left_img"
            android:text=""
            android:textColor="#aaaaaa"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/photo_chat_item_left_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="160dp"
            android:maxHeight="160dp"
            android:layout_alignLeft="@+id/userNamechat_item_photo_left_tv"
            android:layout_below="@+id/userNamechat_item_photo_left_tv"
            android:layout_marginTop="4dp"
            android:adjustViewBounds="true"
             />

        <View
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/photo_chat_item_left_img"
             />
         <RelativeLayout
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userNamechat_item_photo_left_tv"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/photo_chat_item_left_img"
            android:gravity="center" >

            <RelativeLayout
                android:id="@+id/fail_chat_item_photo_left_rl"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/fail_chat_item_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/message_groupchat_btn_resend"
                    android:visibility="invisible" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>