<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/top_homepage_item"
        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/img_huodong_homepage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
             />

        <RelativeLayout
            android:id="@+id/load_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="36dp"
            android:background="@drawable/acty_card_img_default_load_state_bg" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/acty_card_img_default_load_state" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/maoglass_item_huodong_fragment_rl"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:background="#ccffffff" >

            <RelativeLayout
                android:id="@+id/favour_hongdong_fragment_rl"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/favour_hongdong_fragment_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/acty_cardimg_btn_like_hl" />
            </RelativeLayout>

            <TextView
                android:id="@+id/praiseCount_huodong_fragment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/favour_hongdong_fragment_rl"
                android:text="50"
                android:textColor="#cc606366"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/style_homepage_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/praiseCount_huodong_fragment_tv"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="活动进行中"
                android:textColor="#cc606366"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_homepage_item"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_below="@id/top_homepage_item" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/title_huodong_homepage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这是用来测试的啊"
                android:textColor="#606366"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/address_huodong_homepage_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/title_huodong_homepage"
                android:layout_marginTop="10dp"
                android:text="地址:Meet U 单身社区"
                android:textColor="#a0a0a0"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/starttime_huodong_homepager_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/acty_card_img_clock"
            android:drawablePadding="4dp"
            android:text="2015-08-10"
            android:textColor="#b5b5b5"
            android:textSize="11sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view_bottom_homepage"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/bottom_homepage_item"
        android:background="#cccccc" />

    <View
        android:id="@+id/view_bottom2_homepage"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/view_bottom_homepage"
        android:background="#80eeeeee" />

</RelativeLayout>