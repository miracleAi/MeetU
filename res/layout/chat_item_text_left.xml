<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

     >
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
        >
        
         <RelativeLayout  android:id="@+id/time_chat_item_left_rl"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/time_chat_item_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" 
           android:layout_alignParentBottom="true"     
            android:layout_centerHorizontal="true"
            android:textSize="11dp"
            android:textColor="#a0a0a0"
            android:text="昨天 23:16" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"           
            android:layout_marginLeft="10dp"
            android:layout_below="@id/time_chat_item_left_rl"
            android:src="@drawable/message_groupchat_img_profiles_default" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/time_chat_item_left_rl"
            android:layout_toRightOf="@+id/imageView1"
            android:textSize="11sp"
            android:textColor="#aaaaaa"
            android:text="杨颖" />

        <TextView
            android:id="@+id/content_chat_item_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:padding="10dp"
            android:layout_marginTop="4dp"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:background="@drawable/dialog_gray"
           	android:text="这是别人发的消息" />

        
        <View
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_below="@+id/content_chat_item_left_tv"
           />
        <RelativeLayout            
		    android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"           
            android:layout_below="@+id/textView1"
            android:layout_toRightOf="@+id/content_chat_item_left_tv"
            android:gravity="center">
        <RelativeLayout 
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:gravity="center">
	        <ImageView
	            android:id="@+id/fail_chat_item_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:visibility="invisible"
	            android:src="@drawable/message_groupchat_btn_resend" />
	        </RelativeLayout>
        </RelativeLayout>
        

        </RelativeLayout>

</RelativeLayout>
