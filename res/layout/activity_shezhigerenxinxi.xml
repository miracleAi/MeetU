<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <!-- title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/selfinfo1_back_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/register_leftarrow_720" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="设置个人信息" />
            <ImageView
                android:id="@+id/activity_selfinfo1_to_selfinfo2_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/register_rightarrow_720" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nornal_margin_left"
        android:layout_marginRight="@dimen/nornal_margin_right"
        android:layout_marginTop="44dp"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/selfinfo1_userhead_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/complete_add_720" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nornal_margin_left"
        android:layout_marginRight="@dimen/nornal_margin_right"
        android:layout_marginTop="56dp"
        android:orientation="vertical" >
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView 
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/complete_name_720"
                />
        <EditText
            android:id="@+id/selfinfo1_nickname_et"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:hint="昵称" 
            android:gravity="center"
            android:layout_toRightOf="@id/img3"
             android:textSize="14sp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:background="@drawable/register_sent_dark_720"
            />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nornal_margin_left"
        android:layout_marginRight="@dimen/nornal_margin_right"
        android:layout_marginTop="@dimen/small_margin_top"
        android:orientation="vertical" >
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView 
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/complete_gender_720"
                />
        <TextView
            android:id="@+id/selfinfo1_sex_et"
            android:layout_width="94dp"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:hint="性别" 
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_toRightOf="@id/img2"
            android:background="@drawable/register_sent_dark_720"
            />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nornal_margin_left"
        android:layout_marginRight="@dimen/nornal_margin_right"
        android:layout_marginTop="@dimen/small_margin_top"
        android:orientation="vertical" >
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView 
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/complete_birth_720"
                />
        <TextView
            android:id="@+id/selfinfo_birth_et"
            android:layout_width="153dp"
            android:layout_height="40dp"
            android:layout_marginLeft="2dp"
            android:hint="出生日期" 
            android:gravity="center"
             android:textSize="14sp"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:layout_toRightOf="@id/img1"
            android:background="@drawable/register_sent_dark_720"
            />
        </RelativeLayout>
    </LinearLayout>
    
 <RelativeLayout 
     android:layout_width="match_parent"
     android:layout_height="fill_parent"
     android:layout_marginTop="@dimen/nornal_margin_top"
     >
