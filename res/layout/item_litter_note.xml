<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout 
        android:id="@+id/all_item_litter_note_rl"
        android:layout_width="match_parent"
        android:layout_height="189dp"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/massage_letters_img_card_bg" >

        <RelativeLayout
            android:id="@+id/item_center1_litter_note_rl"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true" >

            <ImageView
                android:id="@+id/photo_item_note_litter_img"
                android:layout_width="44dp"
                android:layout_height="44dp"
                
                android:src="@drawable/acty_barrage_img_comment_profiles_default" />

            <ImageView
                android:id="@+id/favor_item_note_info_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/massage_groupchatmember_img_attention" />
        </RelativeLayout>

        <TextView
            android:id="@+id/user_name_item_note_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_center1_litter_note_rl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="刘易斯"
            android:textColor="#606366"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/school_item_note_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name_item_note_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:text="北京大学"
            android:textColor="#a0a0a0"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/bottom_litter_note_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp" >

            <TextView
                android:id="@+id/number_noread_item_note_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#a0a0a0"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 条未读消息"
                android:textColor="#a0a0a0"
                android:textSize="10sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottom_litter_note_ll"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6dp"
            android:src="@drawable/massage_letters_img_paperplane" />

        <ImageView
            android:id="@+id/sex_view_color_img_item_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/massage_letters_img_line_boy" />
    </RelativeLayout>
    </RelativeLayout>

</LinearLayout>