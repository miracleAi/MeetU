<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout 
            android:id="@+id/lahei_item_laheijubao_rl"
            android:layout_width="122dp"
            android:layout_height="61dp" 
            android:background="@drawable/item_buytickets_bg" 
            >
            <TextView
                android:id="@+id/lahei_item_tv" 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/textview_bg"
                android:text="拉黑Ta"/>
            
        </RelativeLayout>
        <RelativeLayout 
            android:id="@+id/jubao_item_laheijubao_rl"
            android:layout_width="122dp"
            android:layout_height="61dp"  
            android:background="@drawable/item_buytickets_bg" 
            >
            <TextView 
                android:id="@+id/jubao_item_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/textview_bg"
                android:text="举报Ta"/>
            
        </RelativeLayout>
        </LinearLayout>
    

</RelativeLayout>
