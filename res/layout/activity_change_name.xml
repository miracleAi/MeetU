<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    android:background="@color/white" >
    <RelativeLayout 
        android:id="@+id/top_changname_rl"
          android:layout_width="match_parent"
    android:layout_height="44dp"
    android:gravity="center">
    
        <RelativeLayout 
	    android:id="@+id/back_changename_mine_rl"
	    android:layout_width="44dp"
	    android:layout_height="44dp"
	    android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
         android:background="@drawable/kongjianruoqu_bg"
	    android:gravity="center">

        <ImageView
            android:id="@+id/back_changename_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:src="@drawable/mine_alter_btn_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#a0a0a0"
            android:textSize="19sp"
            android:text="修改个人昵称" />
         <RelativeLayout 
            android:id="@+id/mine_changename_wancheng_rl"
            android:layout_width="44dp"
            android:layout_height="44dp"
             android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
             android:background="@drawable/kongjianruoqu_bg"
            android:gravity="center">

        <TextView
            android:id="@+id/mine_changename_wancheng_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="15sp"
            android:textColor="#33c6e5"
            android:text="完成" />
        </RelativeLayout>
        
    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc"
        android:layout_below="@id/top_changname_rl"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/top_changname_rl"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:textSize="16sp"
        android:textColor="#a0a0a0"
        android:text="昵称" />

    <EditText
        android:id="@+id/name_changname_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_marginLeft="8dp"
        android:textSize="16sp"
        android:background="@null"
        android:textColor="#707070"
        android:layout_toRightOf="@+id/textView3"
        android:text="小明" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="6dp"
        android:src="@drawable/mine_likelist_img_blueline" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="15dp"
        android:src="@drawable/mine_alter_img_point_blue" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/imageView3"
        android:textColor="#da33c6e5"
        android:text="最长8个汉子或者16个字符" />
    
     <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:textColor="#bfbfbf"
        android:text="真诚以待 以个人信息开始" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textColor="#bfbfbf"
        android:text="Meet U致力打造轻松健康有趣的社交平台"
        android:textSize="12sp" />
  
    

</RelativeLayout>
