<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66eeeeee"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/top_changname_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/pwhite"
        android:gravity="center" >

        <RelativeLayout
            android:id="@+id/back_changecity_mine_rl"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/kongjianruoqu_bg"
            android:gravity="center" >

            <ImageView
                android:id="@+id/back_changecity_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/mine_alter_btn_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="修改家乡"
            android:textColor="#a0a0a0"
            android:textSize="19sp" />

        <RelativeLayout
            android:id="@+id/city_selector_shengshiqu_rl"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/kongjianruoqu_bg"
            android:gravity="center" >

            <TextView
                android:id="@+id/city_selector_shengshiqu_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成"
                android:textColor="#33c6e5"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc" />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"       
        android:orientation="horizontal">
     <TextView
        android:id="@+id/tip_city_change_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true"
        android:text="家乡"
        android:textColor="#a0a0a0"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/cityName_change_city_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/tip_city_change_tv"
        android:background="@null"
        android:text=""
        android:textColor="#707070"
        android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="1px"
       	android:background="#33c6e5"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="6dp"
        />

    <TextView
        android:id="@+id/tip_changeMajor_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"    
        android:drawableLeft="@drawable/mine_alter_img_point_blue"
        android:drawablePadding="4dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"       
        android:text="选择你的家乡"
        android:textColor="#da33c6e5"
        android:textSize="12sp" />
   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_huise_bg"
        android:orientation="horizontal" >

        <com.meetu.common.city.WheelView
            android:id="@+id/id_province"
            android:background="@color/pwhite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </com.meetu.common.city.WheelView>

        <com.meetu.common.city.WheelView
            android:id="@+id/id_city"
            android:layout_width="0dp"
             android:background="@color/pwhite"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </com.meetu.common.city.WheelView>

        <com.meetu.common.city.WheelView
            android:id="@+id/id_district"
            android:layout_width="0dp"
            android:background="@color/pwhite"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </com.meetu.common.city.WheelView>
    </LinearLayout>

</LinearLayout>