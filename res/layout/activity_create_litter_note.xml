<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/top_litter_notes_create_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center" >

        <RelativeLayout
            android:id="@+id/back_notes_top_rl"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/kongjianruoqu_bg"
            android:gravity="center" >

            <ImageView
                android:id="@+id/back_notes_top_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/mine_alter_btn_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="小纸条"
            android:textColor="#a0a0a0"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/send_notes_top_rl"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/kongjianruoqu_bg"
            android:gravity="center" >

            <TextView
                android:id="@+id/send_notes_top_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送"
                android:textColor="#33c6e5"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/center_notes_create_rl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/top_litter_notes_create_rl" >

        <RelativeLayout
            android:id="@+id/photoHead_notes_top_create_rl"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/kongjianruoqu_bg"
            android:gravity="center" >

            <RelativeLayout
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true" >

                <ImageView
                    android:id="@+id/photoHead_notes_top_create_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/massage_letters_show_img_profile_default" />

                <ImageView
                    android:id="@+id/favor_notes_top_create_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/massage_letters_show_img_attention" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/user_name_create_note_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/photoHead_notes_top_create_rl"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/acty_joinlist_img_female"
            android:text="李琳"
            android:textColor="#606366"
            android:textSize="15sp" />

        

        
    </RelativeLayout>

    <RelativeLayout 
        android:id="@+id/center_create_note_rl"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@+id/center_notes_create_rl">
    <RelativeLayout
        android:id="@+id/photoUpdate_creation_note_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" >

        <ImageView
            android:id="@+id/photoUpdate_create_note_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/chat_show_btn_uploadphoto" />

        <TextView
            android:id="@+id/text_create_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photoUpdate_create_note_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="上传主题照片"
            android:textColor="#aaaaaa"
            android:textSize="13sp" />
    </RelativeLayout>
    
     <RelativeLayout
        android:id="@+id/photo_creationNote_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       	android:layout_centerHorizontal="true"
       	android:layout_centerVertical="true"
      	android:layout_marginTop="34dp"
      	
      	android:visibility="gone"
      	
         >

        <ImageView
            android:id="@+id/photo_creation_note_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@color/gainsboro"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/chat_show_btn_uploadphoto" />

        <ImageView
            android:id="@+id/uploadAgain_create_note_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/chat_show_photoupload_btn_reupload" />
      
    </RelativeLayout>

    
</RelativeLayout>

    <LinearLayout
        android:id="@+id/center_CreationChat_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/center_create_note_rl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/Create_note_text_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/mine_photoview_photoupload_img_edit"
            android:drawablePadding="6dp"
            android:hint="你可以：打招呼、聊兴趣、发明信片..."
            android:maxLength="100"
            android:textColorHint="#bfbfbf"
            android:textColorLink="#33c6e5"
            android:textColor="#898989"
            android:textSize="13sp" >
        </EditText>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="#33c6e5" />

        <RelativeLayout
            android:id="@+id/bottom_CreationChat_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/center_CreationChat_ll"
            android:layout_marginRight="20dp" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="/100"
                android:textColor="#33c6e5"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/textsize_CreationChat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/textView4"
                android:text="0"
                android:textColor="#33c6e5"
                android:textSize="11dp" />
        </RelativeLayout>
    </LinearLayout>
    <!-- <RelativeLayout
        android:id="@+id/send_bottom_create_note_rl"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#80eeeeee" >

        <ImageView
            android:id="@+id/send_bottom_notes_create_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/massage_letters_show_btn_sendletters" />
    </RelativeLayout> -->

</RelativeLayout>