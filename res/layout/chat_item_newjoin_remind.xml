<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/time_photochat_item_right_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true" >

        <TextView
            android:id="@+id/time_photochat_item_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="昨天 23:16"
            android:textColor="#a0a0a0"
            android:textSize="11dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:background="@drawable/dialog_huise_bg"
        android:orientation="vertical" 
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#1933c6e5" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/mine_alter_img_point_blue"
                android:drawablePadding="5dp"
                android:text="新人加入了，打个招呼吧"
                android:textColor="#a0a0a0"
                android:textSize="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp" 
            >

            <RelativeLayout
                android:id="@+id/bottom_left_rl"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/acty_barrage_img_comment_profiles_default" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/bottom_left_rl" 
                android:layout_marginLeft="10dp">
                <RelativeLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    >
                    <TextView 
                        android:id="@+id/name_chat_item_newjoin_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#606366"
                        android:drawableRight="@drawable/acty_joinlist_img_male"
                        android:drawablePadding="8dp"
                        android:text="托马斯"
                        />
                    <TextView  
                        android:id="@+id/school_chat_item_newjoin_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:layout_marginTop="2dp"
                        android:layout_below="@id/name_chat_item_newjoin_tv"
                        android:drawableLeft="@drawable/acty_joinlist_img_male"
                        android:drawablePadding="4dp"
                        android:text="广州美术学院"
                        android:textColor="#a0a0a0"/>
                    </RelativeLayout>
                    <RelativeLayout  
                        android:layout_width="wrap_content"
                    	android:layout_height="wrap_content"
                    	android:layout_centerVertical="true"
                    	android:layout_alignParentRight="true">
                    <ImageView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/acty_barrage_img_arrow"
                        />
                        
                        </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>