<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/dialog_huise_bg" >

        <TextView
            android:id="@+id/title_item_perfect_information_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="完善个人信息"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/content_item_perfect_information_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/title_item_perfect_information_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="这里输入内容"
            android:textColor="#666666" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/content_item_perfect_information_tv"
            android:layout_marginTop="15dp"
            android:background="#cccccc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/content_item_perfect_information_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/back_item_perfect_infoimation_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/kongjianruoqu_bg"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#aa33c6e5"
                android:text="取消" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#cccccc" />

            <TextView
                  android:id="@+id/go_item_perfect_infoimation_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                 android:background="@drawable/kongjianruoqu_bg"
                android:textColor="#aa33c6e5"
                android:text="完善个人信息" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>