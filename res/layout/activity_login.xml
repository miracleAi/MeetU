<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/img_login_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/account_bg" />

    <!-- title -->


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" >

            <ImageView
                android:id="@+id/iv_back_denglu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/register_leftarrow_720" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="登录"
                android:textColor="#404040"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/activity_register_to_yanzhengma_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp" />
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="165dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/nornal_margin_left"
            android:layout_marginRight="@dimen/nornal_margin_right"
            >

            <TextView
                android:id="@+id/forget_to_torgetactivty_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                
                android:textSize="10sp"
                android:textColor="#9a9a9a"
                android:text="忘记密码" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/nornal_margin_left"
            android:layout_marginRight="@dimen/nornal_margin_right"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/register_phone_720" />

                <EditText
                    android:id="@+id/activity_register_phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img3"
                    android:background="@drawable/register_password_f_720"
                    android:hint="手机"
                    android:paddingLeft="16dp"
                    android:textSize="14sp"
                    android:maxLength="11"
                    android:phoneNumber="true"
                    android:singleLine="true" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/nornal_margin_left"
            android:layout_marginRight="@dimen/nornal_margin_right"
            android:layout_marginTop="@dimen/nornal_margin_top"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/register_password_720" />

                <EditText
                    android:id="@+id/activity_register_mima_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img2"
                    android:background="@drawable/register_password_f_720"
                    android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:hint="密码"
                     android:paddingLeft="16dp"
                    android:textSize="14sp"
                    android:inputType="textPassword"
                    android:singleLine="true" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/nornal_margin_left"
            android:layout_marginRight="@dimen/nornal_margin_right"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" >

                <View
                    android:layout_width="40dp"
                    android:layout_height="0.5dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="#9a9a9a" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登录或注册表示同意 "
                        android:textColor="#9a9a9a"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/useragereement_login_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/activity_register_yonghuxieyi_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="用户协议"
                            android:textColor="#00b8de"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#33ccff" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="40dp"
                    android:layout_height="0.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#aaaaaa" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/nornal_margin_left"
            android:layout_marginRight="@dimen/nornal_margin_right"
            android:layout_marginTop="75dp" 
            android:gravity="center">

            <Button
                android:id="@+id/denglu_bt_denglu"
                android:layout_width="180dp"
                android:layout_height="36dp"
                android:background="@drawable/register_login_1_720"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:text="登  录" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/bottom_view"
        android:layout_width="158dp"
        android:layout_height="11dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:src="@drawable/start_page_img_slogan" />

</RelativeLayout>