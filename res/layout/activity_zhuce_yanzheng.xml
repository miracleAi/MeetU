<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- title -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/activity_register_back_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/register_leftarrow_720" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="注册"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/activity_register_to_yanzhengma_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:text="完成"
                android:textColor="#00b8de"
                android:textSize="16dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nornal_margin_left"
        android:layout_marginRight="@dimen/nornal_margin_right"
        android:layout_marginTop="44dp"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/register_logo_720" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nornal_margin_left"
        android:layout_marginRight="@dimen/nornal_margin_right"
        
        android:layout_marginTop="56dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已发送验证码到(+86)"
            android:textColor="#404040" />

        <TextView
            android:id="@+id/phone_fasong_zhuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234567890"
            android:textColor="#404040" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/number_yanzheng_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/one_yanzheng_wangji_et"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/register_ver_h_720"
            android:gravity="center"
            android:layout_weight="1"
            android:maxLength="1"
            android:inputType="number"
            android:text=""
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/two_yanzheng_wangji_et"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:maxLength="1"
            android:layout_marginLeft="8dp"
            android:background="@drawable/register_ver_h_720"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#ffffff"
            android:text="" />

        <TextView
            android:id="@+id/three_yanzheng_wangji_et"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:maxLength="1"
            android:layout_marginLeft="8dp"
            android:background="@drawable/register_ver_h_720"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#ffffff"
            android:text="" />

        <TextView
            android:id="@+id/four_yanzheng_wangji_et"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:maxLength="1"
            android:layout_marginLeft="8dp"
            android:background="@drawable/register_ver_h_720"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#ffffff"
            android:text="" />
        
          <TextView
            android:id="@+id/five_yanzheng_wangji_et"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:maxLength="1"
            android:layout_marginLeft="8dp"
            android:background="@drawable/register_ver_h_720"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#ffffff"
            android:text="" />
          
            <TextView
            android:id="@+id/six_yanzheng_wangji_et"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:maxLength="1"
            android:layout_marginLeft="8dp"
            android:background="@drawable/register_ver_h_720"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#ffffff"
            android:text="" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="72dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/register_sent_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/register_sent_light_720"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <EditText
        android:id="@+id/all_Verification_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:background="@null"
        android:visibility="visible"
        android:maxLength="6"
         >

        <requestFocus />
    </EditText>

</LinearLayout>