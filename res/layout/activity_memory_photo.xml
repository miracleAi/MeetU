<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
   >

 <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_photo_memory_detial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
        />
    <RelativeLayout
        android:id="@+id/favor_photo_memory_detial_rl"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/acty_memorieswall_fullscreen_img_like_bg" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            >

            <ImageView
               
                android:id="@+id/favor_memory_detial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/acty_memorieswall_fullscreen_btn_like_nor" />

            <TextView
                android:id="@+id/number_favor_memory_detial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/favor_memory_detial"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:textColor="#ccffffff"
                android:text="1028" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
