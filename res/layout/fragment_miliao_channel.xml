<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="402dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:background="@drawable/chat_img_card_bg"
         >

        <ImageView
            android:id="@+id/backgroud_miliao_channel_img"
            android:layout_width="match_parent"
            android:layout_height="258dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/acty_barrage_img_bg" />

        <TextView
            android:id="@+id/content_center_miliao_channel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/backgroud_miliao_channel_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="来，我们聊聊摄影"
            android:textColor="#606366"
            android:textSize="15dp" />

        <View
            android:id="@+id/View_center_miliao_channel"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/content_center_miliao_channel_tv"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="6dp"
            android:background="#cccccc" />

        <LinearLayout
            android:id="@+id/number_miliao_channel_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/View_center_miliao_channel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp" >

            <TextView
                android:id="@+id/numberAll_miliao_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#a0a0a0"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv1_miliao_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个小伙伴正在热聊"
                android:textColor="#a0a0a0"
                android:textSize="11dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="11dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="1dp"
                android:background="#a0a0a0" />

            <TextView
                android:id="@+id/tv2_miliao_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其中"
                android:textColor="#a0a0a0"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/numberFavor_miliao_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#a0a0a0"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/tv3_miliao_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个你关注的人"
                android:textColor="#a0a0a0"
                android:textSize="11dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
           
            android:layout_marginBottom="14dp" >

            <ImageView
                android:id="@+id/one_photoHead_channel_img"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                
                android:src="@drawable/acty_show_img_profiles" />

            <ImageView
                android:id="@+id/two_photoHead_channel_img"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:src="@drawable/acty_show_img_profiles" />

            <ImageView
                android:id="@+id/three_photoHead_channel_img"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:src="@drawable/acty_show_img_profiles" />

            <ImageView
                android:id="@+id/four_photoHead_channel_img"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:src="@drawable/acty_show_img_profiles" />

            <ImageView
                android:id="@+id/five_photoHead_channel_img"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:src="@drawable/acty_show_img_profiles" />

            <RelativeLayout
                android:layout_width="34dp"
                android:layout_height="34dp"               
                android:layout_marginLeft="5dp"
                android:background="@drawable/acty_show_btn_numberofpeople_nor" >

                <TextView
                    android:id="@+id/number_user_fragment_miliao_channel_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="00"
                    android:textColor="#33c6e5" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout 
              android:layout_width="44dp"
              android:layout_height="44dp"
              android:layout_alignBottom="@+id/backgroud_miliao_channel_img"
              android:layout_centerHorizontal="true"
              android:layout_marginBottom="12dp"
              android:gravity="center"
            >
        <ImageView
            android:id="@+id/photoHead_manage_miliao_channel_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            
            android:src="@drawable/chat_img_sponsor_profiles_default" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/imageView7"
            android:layout_width="41dp"
            android:layout_height="47dp"          
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="12dp"   
                   
            android:background="@drawable/chat_img_disappeartag"
            android:orientation="vertical" >
             

             <TextView
                 android:id="@+id/date_top_miliao_channel_tv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentTop="true"
                 android:layout_marginTop="4dp"
                 android:layout_centerHorizontal="true"
                 android:text=""
                 android:textColor="#d6ffffff"
                 android:textSize="13dp" />
             <TextView 
                 android:id="@+id/dismiss_miliao_channel_tv"
                 android:layout_below="@id/date_top_miliao_channel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_centerHorizontal="true"
                android:textColor="#d6ffffff"
                android:text="消失"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>