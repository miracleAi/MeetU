<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pwhite"
   >
   <RelativeLayout
        android:id="@+id/top_miliao_UsersList_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
       >

        <RelativeLayout
            android:id="@+id/back_miliao_UsersList_rl"
            android:layout_width="54dp"
            android:layout_height="44dp"
            android:background="@drawable/kongjianruoqu_bg"
            android:gravity="center" >

            <ImageView
                android:id="@+id/back_miliao_UsersList_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/mine_alter_btn_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title_miliao_UsersList_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="觅聊成员"
            android:textColor="#a0a0a0"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
              android:textSize="12sp"
            android:textColor="#a0a0a0"
            android:text="人" />

        <TextView
            android:id="@+id/number_miliao_UsersList_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:textColor="#a0a0a0"
            android:layout_toLeftOf="@+id/textView1"
            android:text="0" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/number_miliao_UsersList_tv"
            android:textSize="12sp"
            android:textColor="#a0a0a0"
            android:text="共" />

    </RelativeLayout>
    
    <View
        android:id="@+id/view_miliao_userList"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/top_miliao_UsersList_rl"
        android:background="#cccccc" />
    
    <ListView
            android:id="@+id/listview_all_miliao_userlist"
            android:layout_below="@+id/view_miliao_userList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"  
                    
            android:cacheColorHint="#00000000"
            android:divider="#cccccc"
            
            android:dividerHeight="1px"
            android:fadingEdge="none"
            android:listSelector="@android:color/transparent"
            android:scrollingCache="false" />

   

</RelativeLayout>
