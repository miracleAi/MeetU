    </RelativeLayout>

    <View
        android:id="@+id/view_litter_notes"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/top_litter_notes_rl"
        android:background="#cccccc" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleview_litter_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_litter_notes"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/message_box_backgroud" />

</RelativeLayout>