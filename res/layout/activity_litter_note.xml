<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/message_box_backgroud" >

    <RelativeLayout
        android:id="@+id/top_litter_notes_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
         >

        <RelativeLayout
            android:id="@+id/back_litter_notes_rl"
            android:layout_width="54dp"
            android:layout_height="44dp"
           
            android:background="@drawable/kongjianruoqu_bg"
            android:gravity="center" >

            <ImageView
                android:id="@+id/back_litter_notes_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/mine_alter_btn_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="小纸条"
            android:textColor="#a0a0a0"
            android:textSize="18sp" />

