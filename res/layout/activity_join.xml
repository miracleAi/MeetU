<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee" >

    <ScrollView
        android:id="@+id/scrollview_join_homepager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp" >

            <RelativeLayout
                android:id="@+id/top_join_rl"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/pwhite"
                android:gravity="center" >

                <RelativeLayout
                    android:id="@+id/back_join_homepager_rl"
                    android:layout_width="54dp"
                    android:layout_height="44dp"
                    android:background="@drawable/kongjianruoqu_bg"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/back_join_homepager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/navi_close_blue" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="报名参加"
                    android:textColor="#a0a0a0"
                    android:textSize="19sp" />

                <RelativeLayout
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center" >
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/view1_join_rl"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/top_join_rl"
                android:background="#cccccc" />

            <RelativeLayout
                android:id="@+id/center1_join_rl"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@id/view1_join_rl"
                android:layout_margin="10dp"
                android:background="@color/pwhite" >

                <ImageView
                    android:id="@+id/photo_join_homepager"
                    android:layout_width="100dp"
                    android:layout_height="75dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/acty_join_img_thumbnails" />

                <RelativeLayout
                    android:id="@+id/title_acty_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="23dp"
                     android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/photo_join_homepager" >

                    <TextView
                        android:id="@+id/title_huodong_join_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新疆深度游"
                        android:textColor="#606366"
                        android:textSize="15dip" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="火热报名中"
                        android:textColor="#33c6e5"
                        android:textSize="12sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/title_tab_huodong_join_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_acty_layout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/photo_join_homepager"
                    android:text="带你看最美的新疆"
                    android:textColor="#a0a0a0"
                    android:textSize="12dip" />

                <TextView
                    android:id="@+id/time_huodong_start_join_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/title_tab_huodong_join_tv"
                    android:layout_below="@+id/title_tab_huodong_join_tv"
                    android:layout_marginTop="12dp"
                    android:drawableLeft="@drawable/acty_join_card1_img_clock"
                    android:drawablePadding="5dp"
                    android:text="2015-10-10"
                    android:textColor="#b5b5b5"
                    android:textSize="10dip" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/center2_join_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/center1_join_rl"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/pwhite"
                android:paddingBottom="20dp" >

                <RelativeLayout
                    android:id="@+id/name_join_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="27dp" >

                    <TextView
                        android:id="@+id/name_join_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/mine_alter_img_point_blue"
                        android:drawablePadding="5dp"
                        android:text="姓名"
                        android:textColor="#606366"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/name_join_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/name_join_tv"
                        android:background="@null"
                        android:hint="告诉我你的真实名字"
                        android:textColor="#606366"
                        android:textColorHint="#cccccc"
                        android:textSize="13sp" >
                    </EditText>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_join_rl"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/acty_join_card2_img_line_blue" />

                <RelativeLayout
                    android:id="@+id/wish_join_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_join_rl"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="32dp" >

                    <TextView
                        android:id="@+id/wish_join_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/mine_alter_img_point_blue"
                        android:drawablePadding="5dp"
                        android:text="愿望"
                        android:textColor="#606366"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/wish_join_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/wish_join_tv"
                        android:background="@null"
                        android:hint="告诉我你的期待(选填)"
                        android:textColor="#606366"
                        android:textColorHint="#cccccc"
                        android:textSize="13sp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/imageView1"
                    android:layout_below="@+id/wish_join_rl"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/acty_join_card2_img_line_blue" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/wish_join_rl"
                    android:layout_alignParentBottom="true"
                    android:layout_alignTop="@+id/imageView2"
                    android:layout_marginTop="18.5dp"
                    android:drawableLeft="@drawable/img_point_red"
                    android:drawablePadding="5dp"
                    android:text="描述一下你心中的Ta,你的兴趣，喜欢的水果......"
                    android:textColor="#aaaaaa"
                    android:textSize="10sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/center3_join_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/center2_join_rl"
                android:layout_margin="10dp"
                android:background="@color/pwhite" >

                <RelativeLayout
                    android:id="@+id/top_center3_join_rl"
                    android:layout_width="match_parent"
                    android:layout_height="49dp" >

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:drawableLeft="@drawable/mine_alter_img_point_blue"
                        android:drawablePadding="5dp"
                        android:text="票种选择"
                        android:textColor="#606366"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/load_ticket_again_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="重新加载"
                            android:textColor="@color/barrage_acty_join_bg"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/view_center3_bottom_homepager"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@id/top_center3_join_rl"
                    android:background="#cccccc" />

                <ListView
                    android:id="@+id/listview_piao_join_homepager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view_center3_bottom_homepager"
                    android:cacheColorHint="#00000000"
                    android:divider="#cccccc"
                    android:dividerHeight="1px"
                    android:fadingEdge="none"
                    android:listSelector="@android:color/transparent"
                    android:scrollingCache="false" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/pay_join_homepager_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/center3_join_rl"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                android:visibility="gone" >

                <RelativeLayout
                    android:id="@+id/center4_join_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <View
                        android:id="@+id/left_center4_join_view"
                        android:layout_width="40dp"
                        android:layout_height="0.5dp"
                        android:layout_centerVertical="true"
                        android:background="#bfbfbf" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/left_center4_join_view"
                        android:text="请选择支付方式"
                        android:textColor="#bfbfbf"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="0.5dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/textView11"
                        android:background="#bfbfbf" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_below="@id/center4_join_rl"
                    android:layout_marginBottom="36dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/gainsboro"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/pay_weixin_rl"
                        android:layout_width="160dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:background="@drawable/item_weixin_bg"
                        android:gravity="center" >

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:drawableLeft="@drawable/acty_join_img_wechat"
                            android:gravity="center"
                            android:text="微信支付"
                            android:textColor="#ffffff"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pay_zhifubao_rl"
                        android:layout_width="160dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:background="@drawable/item_zhifubao_bg"
                        android:gravity="center" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="44dp"
                            android:drawableLeft="@drawable/acty_join_img_alipay"
                            android:gravity="center"
                            android:text="支付宝支付"
                            android:textColor="#ffffff"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/pay_join_homepager_rl"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/center3_join_rl"
                android:layout_marginBottom="36dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="64dp"
                android:background="#00acee"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/acty_join_img_tickmark"
                    android:text="参加活动"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pay_joined_layout"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@id/center3_join_rl"
                android:layout_marginBottom="36dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="64dp"
                android:background="@color/gainsboro"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/acty_join_img_tickmark"
                    android:text="报名成功"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>