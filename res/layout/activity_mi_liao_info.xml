<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66eeeeee"
    android:orientation="vertical"
    tools:context=".MiLiaoInfoActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/top_miliao_info_rl"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white" >

                <RelativeLayout
                    android:id="@+id/back_miliao_info_img_rl"
                    android:layout_width="54dp"
                    android:layout_height="44dp"
                   
                    android:background="@drawable/kongjianruoqu_bg"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/back_miliao_info_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/mine_alter_btn_back" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/title_info_chatList_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="觅聊信息"
                    android:textColor="#a0a0a0"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:id="@+id/view_top_miliao_info"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/top_miliao_info_rl"
                android:background="#cccccc" />

            <RelativeLayout
                android:id="@+id/center1_miliao_info_rl"
                android:layout_width="match_parent"
                android:layout_height="149dp"
                android:layout_below="@id/view_top_miliao_info"
                android:background="@drawable/massage_groupchatmember_img_bg" >

                <RelativeLayout
                    android:id="@+id/imageView1rl"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="53dp"
                        android:layout_height="53dp"
                        android:src="@drawable/massage_groupchatmember_img_profiles_stroke" />

                    <ImageView
                        android:id="@+id/userHead_miliao_info_img"
                        android:layout_width="51dp"
                        android:layout_height="51dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/massage_groupchatmember_img_profiles_default" />
                </RelativeLayout>
                <RelativeLayout 
                    android:id="@+id/name_miliao_info_qunliao_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView1rl"
                    android:layout_centerHorizontal="true"                 
                    android:layout_marginTop="14dp"
                    android:visibility="gone" >
                     <TextView
                        android:id="@+id/name_miliao_info_tv_huodong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="zc"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />
                      <View
                        android:id="@+id/view_miliao_info_qunliao"
                    	android:layout_width="160dp"
                    	android:layout_height="1px"
                 		android:layout_below="@id/name_miliao_info_tv_huodong"
                        android:layout_centerHorizontal="true"
                    	android:background="#b2ffffff" />
                       <TextView
                        android:id="@+id/name_miliao_info_huodong_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="群主"
                       	android:layout_below="@+id/view_miliao_info_qunliao"
                        android:textColor="#ffffff"
                        android:layout_centerHorizontal="true"
                        android:textSize="15sp" />
                    
                 </RelativeLayout>

                <RelativeLayout 
                    android:id="@+id/name_miliao_info_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView1rl"
                    android:layout_centerHorizontal="true"
                    
                    android:layout_marginTop="14dp" >
                <RelativeLayout
                    android:id="@+id/name_miliao_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                     >

                    <TextView
                        android:id="@+id/name_miliao_info_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="z"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                  <!--   <TextView
                        android:id="@+id/name2_miliao_info_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@id/name_miliao_info_tv"
                        android:text="(群主)"
                        android:textColor="#ffffff"
                        android:textSize="11sp" /> -->
                </RelativeLayout>

                <View
                    android:layout_width="160dp"
                    android:layout_height="1px"
                    android:layout_below="@id/name_miliao_info"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:background="#b2ffffff" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_miliao_info"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/numberAll_user_miliao_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="名成员"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="2dp"
                        android:background="#ffffff" />

                    <TextView
                        android:id="@+id/numberFavor_user_miliao_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我关注的"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/center2_miliao_info_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycleview_miliao_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="34dp"
                    android:layout_marginRight="34dp"
                    android:background="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/center3_miliao_info_rl"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@id/center2_miliao_info_rl"
                android:layout_marginTop="20dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="新消息提醒"
                    android:textColor="#606366"
                    android:textSize="14sp" />

                <Switch
                    android:id="@+id/switch1_miliao_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/center4_miliao_info_rl"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_below="@id/center3_miliao_info_rl"
                android:layout_marginTop="1dp"
                android:background="@color/white" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="举报群聊"
                    android:textColor="#606366"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/tvcell_nor" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bottom_miliao_info_rl"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="44dp"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="34dp"
                android:layout_marginTop="32dp"
                android:background="@color/red" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="退出群聊"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>